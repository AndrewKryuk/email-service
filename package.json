{
  "name": "email-service",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "cli": "node ./dist/src/cli",
    "cli:dev": "nest build && env-cmd node ./dist/src/cli",
    "start:dev": "env-cmd -e development env-cmd nest start --watch",
    "start:local": "env-cmd -e local env-cmd nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,database}/**/*.ts\"",
    "lint:fix": "eslint \"{src,database}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:run": "npm run typeorm migration:run -- -d ./node_modules/@kryuk/ddd-kit/dist/infra/configuration/typeorm-config.factory.js",
    "migration:run-local": "env-cmd npm run typeorm migration:run -- -d ./node_modules/@kryuk/ddd-kit/dist/infra/configuration/typeorm-config.factory.js",
    "migration:generate": "npm run typeorm -- -d ./node_modules/@kryuk/ddd-kit/dist/infra/configuration/typeorm-config.factory.js migration:generate ./database/migrations/$npm_config_name",
    "migration:create": "npm run typeorm -- migration:create ./database/migrations/$npm_config_name",
    "migration:revert": "npm run typeorm -- -d ./node_modules/@kryuk/ddd-kit/dist/infra/configuration/typeorm-config.factory.js migration:revert",
    "migration:revert-local": "env-cmd npm run typeorm -- -d ./node_modules/@kryuk/ddd-kit/dist/infra/configuration/typeorm-config.factory.js migration:revert"
  },
  "dependencies": {
    "@kryuk/ddd-kit": "github:AndrewKryuk/nestjs-ddd-kit#v0.0.7",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.3.7",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "nest-commander": "^3.19.1",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.7",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@infra/(.*)$": "<rootDir>/src/infra/$1",
      "^@domain/(.*)$": "<rootDir>/src/domain/$1",
      "^@application/(.*)$": "<rootDir>/src/application/$1",
      "^@transport/(.*)$": "<rootDir>/src/transport/$1"
    },
    "restoreMocks": true
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
